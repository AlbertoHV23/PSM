<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_home_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F1F1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="10dp"
        android:background="#7A3535"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_PostVPublicacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="How can i accomodate the code whitout deleting line by line?"
                app:layout_constraintEnd_toEndOf="@+id/txt_PostVUser"
                app:layout_constraintStart_toStartOf="@+id/cardView2"
                app:layout_constraintTop_toBottomOf="@+id/cardView2" />

            <TextView
                android:id="@+id/txt_PostVUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Alberto Daniel Hernandez Villanueva"
                android:textColor="#090909"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toTopOf="@+id/cardView2" />

            <TextView
                android:id="@+id/txt_PostVcategoria"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:text="Categoria"
                android:textColor="@color/yellow"
                app:layout_constraintStart_toStartOf="@+id/txt_PostVUser"
                app:layout_constraintTop_toBottomOf="@+id/txt_PostVUser" />

            <Button
                android:id="@+id/btn_like"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_radius"
                android:capitalize="none"
                android:text="Me too"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="8sp"
                app:icon="@drawable/ic_baseline_pan_tool_24"
                app:iconTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <Button
                android:id="@+id/btn_share"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/border_radius"
                android:capitalize="none"
                android:textAllCaps="false"
                android:textSize="10sp"
                app:icon="@drawable/ic_baseline_share_24"
                app:iconTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/btn_like"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_comment"
                app:layout_constraintTop_toTopOf="@+id/btn_comment"
                tools:text="Share" />

            <ImageView
                android:id="@+id/img_postImagen"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_radius"
                app:layout_constraintEnd_toEndOf="@+id/txt_PostVPublicacion"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txt_PostVPublicacion"
                app:layout_constraintTop_toBottomOf="@+id/txt_PostVPublicacion"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="100 doubts"
                android:textColor="#000000"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/img_postImagen"
                app:layout_constraintTop_toBottomOf="@+id/img_postImagen" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_PostVAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_comment"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/border_radius"
                android:capitalize="none"
                android:textAllCaps="false"
                android:textSize="10sp"
                app:icon="@drawable/ic_baseline_comment_24"
                app:iconTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/btn_like"
                app:layout_constraintStart_toEndOf="@+id/btn_like"
                app:layout_constraintTop_toTopOf="@+id/btn_like"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Comment" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>